@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "All Users";
}

<div class="container-fluid py-3">
    <!-- Header Section -->
    <h1 class="ps-3 mb-4 text-start text-dark fw-bold border-bottom">All Roles</h1>

    <!-- Search Form -->


    @if (Model?.Count() > 0)
    {
        <table id="datatablesSimple" class="table table-striped table-bordered table-hover mt-3 ">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(u=>u.Id)</th>
                    <th>@Html.DisplayNameFor(u=>u.UserName)</th>
                    <th>@Html.DisplayNameFor(u => u.DisplayName)</th>
                    <th>@Html.DisplayNameFor(u => u.PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(u => u.Email)</th>
                    <th>@Html.DisplayNameFor(u=>u.Roles)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.DisplayName</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.Email</td>
                        <td>@string.Join(",",user.Roles.ToList())</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a class="btn btn-sm btn-warning"
                                   asp-action="Edit"
                                   asp-controller="User"
                                   asp-route-id="@user.Id">
                                    Edit
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>There is no USERS </h1>
    }
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
