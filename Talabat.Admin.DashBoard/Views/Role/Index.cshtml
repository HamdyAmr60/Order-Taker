@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}

<div class="container-fluid py-3">
    <!-- Header Section -->
    <h1 class="ps-3 mb-4 text-start text-dark fw-bold border-bottom">All Roles</h1>

    <!-- Search Form -->
<partial name="AddForm" model="new RoleFromViewModel()"/>

    @if(Model?.Count() > 0)
    {
        <table id="datatablesSimple" class="table table-striped table-bordered table-hover mt-3 ">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(r => r.Id)</th>
                    <th>@Html.DisplayNameFor(r => r.Name)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Role in Model)
                {
                    <tr>
                        <td>@Role.Id</td>
                        <td>@Role.Name</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a class="btn btn-sm btn-warning"
                                   asp-action="Edit"
                                   asp-controller="Role"
                                   asp-route-id="@Role.Id">
                                    Edit
                                </a>
                                <a class="btn btn-sm btn-danger"
                                   asp-action="Delete"
                                   asp-controller="Role"
                                   asp-route-id="@Role.Id">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>There is no Role </h1>
    }
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
